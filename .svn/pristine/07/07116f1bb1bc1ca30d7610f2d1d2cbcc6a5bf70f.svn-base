<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.DeviceDefault.Light.NoActionBar" />
    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:Theme.DeviceDefault.Dialog">
        <item name="android:windowFrame">@null</item>
 <!-- 边框 -->
        <item name="android:windowNoTitle">true</item>
 <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
 <!-- 背景透明 -->
        <item name="android:windowIsTranslucent">false</item>
 <!-- 半透明 -->
        <item name="android:windowIsFloating">true</item>
 <!-- 是否浮现在activity之上 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
 <!-- 模糊 -->
    </style>
    <!-- 主界面group -->
    <style name="main_activity_tab_group_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/tab_bg_color</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/padding_5</item>
        <item name="android:paddingTop">@dimen/padding_9</item>
        <item name="android:paddingRight">@dimen/padding_5</item>
        <item name="android:paddingBottom">@dimen/padding_1</item>
    </style>

    <!-- 主界面rudio_button -->
    <style name="main_activity_tab_radio_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:textColor">@drawable/tab_text_selector</item>
        <item name="android:drawablePadding">@dimen/padding_4</item>
    </style>

    <!-- 个人中心的横线 -->
    <style name="personal_center_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_line_half_of_one</item>
        <item name="android:layout_marginTop">@dimen/margin_15</item>
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="register_input_style">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/edit_text_light_round_border</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:paddingLeft">21dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:drawablePadding">12dp</item>
    </style>

    <style name="modifyAvatarDialogWindowAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>

    <style name="DialogMoveAnimation" parent="@android:Theme.Dialog">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    <!-- 基本控件的Style ：Dialog -->
    <style name="Dialog_Standard" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>